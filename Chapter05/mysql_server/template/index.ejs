<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title><%= title %></title>
  <style>
    * {
      padding: 0;
      margin: 0;
      box-sizing: border-box;
    }
    html {
      background-color: #222;
    }
    body {
      width: 600px;
      margin: 0 auto;
      padding: 20px 20px 0;
      background-color: #fff;
    }
    ul {
      list-style-position: inside;
    }
    .row.li {
      padding-left: 20px;
      position: relative;
      line-height: 1;
    }
    .row.li:before {
      content: '';
      position: absolute;
      left: 0;
      width: 6px;
      height: 6px;
      border-radius: 50%;
      background-color: #333;
      top: 50%;
      transform: translateY(-50%);
    }

    .row {
      display: flex;
      align-items: center;
      margin-bottom: 10px;
    }
    .col {
      flex-grow: 0;
      flex-shrink: 0;
    }
    .col-4 {
      width: 40%;
    }
    .col-6 {
      width: 60%;
    }

    .title {
      margin-bottom: 50px;
      text-align: center;
      color: #222;
    }
    .para-title {
      color: #3a3a3a;
      margin-bottom: 20px;
    }
    .text-right {
      padding-right: 20px;
      text-align: right;
    }
    .form {
      height: 100px;
      border-bottom: 1px solid #e4e4e4;
      margin-bottom: 30px;
    }
    .content, .time {
      margin-right: 10px;
    }
    .time {
      font-size: 12px;
      color: #999;
    }
  </style>
</head>
<body>
  <h1 class="title">TODO List</h1>

  <!-- <h3 class="para-title">Submit TODO: </h3> -->
  <form class="form"
    action="http://localhost:5020/add" enctype="application/x-www-form-urlencoded" method="post">
    <div class="row">
      <p class="col col-4 text-right">内容：</p>
      <p class="col col-6"><input type="text" name="content" value="" placeholder="请输入内容"></p>
    </div>
    <div class="row">
      <p class="col col-4"></p>
      <p class="col col-6"><input type="submit" value="提交"></p>
    </div>
  </form>

  <h3 class="para-title">Display TODO List: </h3>
  <ul>
    <% todos.forEach(function(todo){ %>
      <li class="li row">
        <span class="content col col-3"><%= todo.content %></span>
        <span class="time created_at col-3"><%= todo.created_at %></span>
        <span class="time updated_at col-3"><%= todo.updated_at %></span>
      </li>
    <% }) %>
  </ul>
  <script src="https://cdn.bootcss.com/jquery/3.3.1/jquery.min.js"></script>
  <script type="text/javascript">
  </script>
</body>
</html>
